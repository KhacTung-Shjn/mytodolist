<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorXanhLo</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeButton">
        <item name="android:background">@drawable/background_radio</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/radio_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/auto_margin</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
